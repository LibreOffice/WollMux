    <dependencies>
      <dependency>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-graphics</artifactId>
        <version>16-ea+1</version>
      </dependency>
      <dependency>
        <groupId>jakarta.mail</groupId>
