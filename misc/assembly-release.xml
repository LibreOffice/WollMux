<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>release</id>
	<formats>
		<format>tgz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
		<file>
			<source>dist/WollMux-${project.version}-manual_installation.tgz</source>
			<outputDirectory>.</outputDirectory>
		</file>
		<file>
			<source>target/${project.build.finalName}-installer.jar</source>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>dist/deb</directory>
			<outputDirectory>deb</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>dist</directory>
			<outputDirectory>windows</outputDirectory>
			<includes>
				<include>WollMux.zip</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
